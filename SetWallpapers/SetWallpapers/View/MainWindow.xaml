                                  SelectedValue="{Binding Path = SelectedInterval}"
                        >
                        </ComboBox>

                        <Button Margin="10" Height="30" Command="{Binding SaveChangesCommand}" >Save Changes</Button>

                    </StackPanel>-->

                </Grid>

            </TabItem>

            <TabItem Header="ABOUT">
                <TextBlock>Igor Klikun</TextBlock>
            </TabItem>

        </dragablz:TabablzControl>


